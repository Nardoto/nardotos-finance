{
  "name": "Finance App Dark Blue Theme",
  "version": "1.0",

  "colors": {
    "background": {
      "primary": "#0D1025",
      "secondary": "#131629",
      "tertiary": "#1A1F3C",
      "card": "#1E2344",
      "cardHover": "#252B4D",
      "elevated": "#2A3156",
      "overlay": "rgba(13, 16, 37, 0.95)"
    },

    "accent": {
      "primary": "#4F7CFF",
      "primaryLight": "#6B8FFF",
      "primaryDark": "#3D6AE8",
      "secondary": "#7C3AED",
      "secondaryLight": "#9F67FF",
      "gradient": {
        "start": "#4F7CFF",
        "end": "#7C3AED"
      }
    },

    "text": {
      "primary": "#FFFFFF",
      "secondary": "#8B95A5",
      "tertiary": "#5A6478",
      "muted": "#3D4556",
      "inverse": "#0D1025"
    },

    "semantic": {
      "success": "#22C55E",
      "successLight": "#4ADE80",
      "successDark": "#16A34A",
      "successBg": "rgba(34, 197, 94, 0.15)",

      "danger": "#EF4444",
      "dangerLight": "#F87171",
      "dangerDark": "#DC2626",
      "dangerBg": "rgba(239, 68, 68, 0.15)",

      "warning": "#F59E0B",
      "warningLight": "#FBBF24",
      "warningDark": "#D97706",
      "warningBg": "rgba(245, 158, 11, 0.15)",

      "info": "#3B82F6",
      "infoLight": "#60A5FA",
      "infoDark": "#2563EB"
    },

    "border": {
      "default": "rgba(75, 85, 120, 0.3)",
      "light": "rgba(75, 85, 120, 0.15)",
      "accent": "rgba(79, 124, 255, 0.5)",
      "accentStrong": "#4F7CFF"
    },

    "chart": {
      "line1": "#4F7CFF",
      "line2": "#7C3AED",
      "line3": "#22C55E",
      "bar": "#4F7CFF",
      "barSecondary": "#2A3156",
      "grid": "rgba(75, 85, 120, 0.2)",
      "tooltip": "#1E2344"
    },

    "gradient": {
      "card": {
        "from": "#1E2344",
        "to": "#131629"
      },
      "accentCard": {
        "from": "#4F7CFF",
        "via": "#5B8DEF",
        "to": "#7C3AED"
      },
      "highlight": {
        "from": "rgba(79, 124, 255, 0.2)",
        "to": "rgba(124, 58, 237, 0.1)"
      },
      "glow": {
        "blue": "rgba(79, 124, 255, 0.4)",
        "purple": "rgba(124, 58, 237, 0.3)"
      }
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
      "mono": "'JetBrains Mono', 'Fira Code', monospace"
    },

    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem",
      "6xl": "3.75rem"
    },

    "fontWeight": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },

    "lineHeight": {
      "tight": 1.1,
      "snug": 1.25,
      "normal": 1.5,
      "relaxed": 1.625,
      "loose": 2
    },

    "letterSpacing": {
      "tighter": "-0.05em",
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em",
      "wider": "0.05em"
    }
  },

  "spacing": {
    "0": "0",
    "0.5": "0.125rem",
    "1": "0.25rem",
    "1.5": "0.375rem",
    "2": "0.5rem",
    "2.5": "0.625rem",
    "3": "0.75rem",
    "3.5": "0.875rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "7": "1.75rem",
    "8": "2rem",
    "9": "2.25rem",
    "10": "2.5rem",
    "11": "2.75rem",
    "12": "3rem",
    "14": "3.5rem",
    "16": "4rem",
    "20": "5rem",
    "24": "6rem"
  },

  "borderRadius": {
    "none": "0",
    "sm": "0.375rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1.25rem",
    "3xl": "1.5rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -2px rgba(0, 0, 0, 0.3)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.5), 0 4px 6px -4px rgba(0, 0, 0, 0.4)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 8px 10px -6px rgba(0, 0, 0, 0.4)",
    "2xl": "0 25px 50px -12px rgba(0, 0, 0, 0.6)",
    "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.3)",
    "glow": {
      "blue": "0 0 20px rgba(79, 124, 255, 0.3)",
      "purple": "0 0 20px rgba(124, 58, 237, 0.3)",
      "success": "0 0 20px rgba(34, 197, 94, 0.3)"
    },
    "card": "0 4px 20px rgba(0, 0, 0, 0.3)",
    "cardHover": "0 8px 30px rgba(0, 0, 0, 0.4)"
  },

  "effects": {
    "blur": {
      "sm": "4px",
      "md": "8px",
      "lg": "16px",
      "xl": "24px"
    },
    "backdrop": {
      "blur": "blur(12px)",
      "saturate": "saturate(180%)"
    },
    "transition": {
      "fast": "150ms ease",
      "normal": "200ms ease",
      "slow": "300ms ease",
      "spring": "300ms cubic-bezier(0.34, 1.56, 0.64, 1)"
    },
    "animation": {
      "pulse": "pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite",
      "shimmer": "shimmer 2s linear infinite",
      "float": "float 3s ease-in-out infinite"
    }
  },

  "components": {
    "card": {
      "background": "#1E2344",
      "backgroundGradient": "linear-gradient(135deg, #1E2344 0%, #131629 100%)",
      "border": "1px solid rgba(75, 85, 120, 0.3)",
      "borderRadius": "1.25rem",
      "padding": "1.5rem",
      "shadow": "0 4px 20px rgba(0, 0, 0, 0.3)"
    },

    "cardAccent": {
      "background": "linear-gradient(135deg, #4F7CFF 0%, #7C3AED 100%)",
      "borderRadius": "1.25rem",
      "padding": "1.5rem",
      "shadow": "0 8px 30px rgba(79, 124, 255, 0.3)"
    },

    "button": {
      "primary": {
        "background": "#4F7CFF",
        "backgroundHover": "#3D6AE8",
        "text": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": 600
      },
      "secondary": {
        "background": "rgba(75, 85, 120, 0.3)",
        "backgroundHover": "rgba(75, 85, 120, 0.5)",
        "text": "#FFFFFF",
        "borderRadius": "0.75rem",
        "padding": "0.75rem 1.5rem",
        "fontWeight": 500
      },
      "ghost": {
        "background": "transparent",
        "backgroundHover": "rgba(75, 85, 120, 0.2)",
        "text": "#8B95A5",
        "textHover": "#FFFFFF"
      },
      "icon": {
        "size": "2.5rem",
        "borderRadius": "0.75rem",
        "background": "rgba(75, 85, 120, 0.3)"
      }
    },

    "input": {
      "background": "#131629",
      "backgroundFocus": "#1A1F3C",
      "border": "1px solid rgba(75, 85, 120, 0.3)",
      "borderFocus": "1px solid #4F7CFF",
      "borderRadius": "0.75rem",
      "padding": "0.875rem 1rem",
      "placeholder": "#5A6478",
      "text": "#FFFFFF"
    },

    "avatar": {
      "sizes": {
        "sm": "2rem",
        "md": "2.5rem",
        "lg": "3rem",
        "xl": "4rem"
      },
      "border": "2px solid #4F7CFF",
      "borderRadius": "9999px"
    },

    "badge": {
      "borderRadius": "9999px",
      "padding": "0.25rem 0.75rem",
      "fontSize": "0.75rem",
      "fontWeight": 500
    },

    "progressBar": {
      "background": "rgba(75, 85, 120, 0.3)",
      "fill": "#4F7CFF",
      "fillSuccess": "#22C55E",
      "fillWarning": "#F59E0B",
      "fillDanger": "#EF4444",
      "height": "0.5rem",
      "borderRadius": "9999px"
    },

    "tabs": {
      "background": "rgba(75, 85, 120, 0.2)",
      "activeBackground": "#4F7CFF",
      "text": "#8B95A5",
      "activeText": "#FFFFFF",
      "borderRadius": "0.75rem",
      "padding": "0.5rem 1rem"
    },

    "tooltip": {
      "background": "#1E2344",
      "text": "#FFFFFF",
      "borderRadius": "0.5rem",
      "padding": "0.5rem 0.75rem",
      "shadow": "0 4px 12px rgba(0, 0, 0, 0.4)"
    },

    "modal": {
      "background": "#1E2344",
      "overlay": "rgba(13, 16, 37, 0.9)",
      "borderRadius": "1.5rem",
      "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.6)"
    },

    "divider": {
      "color": "rgba(75, 85, 120, 0.3)",
      "thickness": "1px"
    }
  },

  "layout": {
    "maxWidth": {
      "xs": "320px",
      "sm": "384px",
      "md": "448px",
      "lg": "512px",
      "xl": "576px",
      "2xl": "672px",
      "full": "100%"
    },
    "containerPadding": "1rem",
    "sectionSpacing": "2rem",
    "cardGap": "1rem"
  },

  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },

  "zIndex": {
    "dropdown": 1000,
    "sticky": 1100,
    "fixed": 1200,
    "modal": 1300,
    "popover": 1400,
    "tooltip": 1500
  }
}
